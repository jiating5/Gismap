<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.addfragment.PeopleFragment">

    <SearchView
        android:id="@+id/addp_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_margin="@dimen/dp_10"
        android:queryHint="搜索账号/手机号码/昵称"
        android:background="@drawable/searchview_layout"/>

    <TextView
        android:id="@+id/add_phonelinkman"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:text="添加手机联系人"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:background="@drawable/edittext_layout"
        android:drawableLeft="@mipmap/lianxirenqunzu"/>

    <TextView
        android:id="@+id/add_facefriend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:hint="面对面加好友"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/edittext_layout"
        android:drawableLeft="@mipmap/saoyisao"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"/>

</LinearLayout>