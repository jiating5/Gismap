<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.alorma.timeline.RoundTimelineView
        app:timeline_lineColor="#fefefe"
        app:timeline_indicatorColor="#fefefe"
        android:id="@+id/item_timeline"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        app:timeline_indicatorSize="9dp"
        app:timeline_lineStyle="linear"
        app:timeline_type="middle" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_time"
            android:textColor="#fefefe"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="2019/12/19  16:30:00"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/item_activity"
            android:textColor="#fefefe"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="活动a"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/item_adress"
            android:textColor="#fefefe"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="下午三点 西二旗xxx"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <ImageView
            android:background="#fefefe"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>

</LinearLayout>